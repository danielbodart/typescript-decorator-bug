{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitAny": true,
    "strict": true,
    "module": "NodeNext",
    "target": "ESNext",
    "noEmitOnError": true,
    "sourceMap": true,
    "importHelpers": false,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "preserveSymlinks": false,
    "outDir": "./dist",
  },
  "include": [
    "index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
